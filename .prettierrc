{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",                   
    "<THIRD_PARTY_MODULES>",    
    "^@/components/(.*)$",      
    "^@/hooks/(.*)$",           
    "^@/(.*)$",                 
    "^[./]"                     
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}